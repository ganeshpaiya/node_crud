<%- include ../layouts/header.ejs %>


    <% if(messages.error){ %>
        <p style="color:red">
            <%- messages.error %>
        </p>
        <% } %>

            <% if(messages.success){ %>
                <p style="color:green">
                    <%- messages.success %>
                </p>
                <% } %>

                    <form action="/product/add" method="post" name="form1">
                        <table width="25%" border="0">
                            <tr>
                                <td>Name</td>
                                <td><input type="text" name="name" id="name" value="<%=name %>"></td>
                            </tr>
                            <tr>
                                <td>Quantity</td>
                                <td><input type="text" name="quantity" id="quantity" value="<%=quantity %>"></td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td><input type="text" name="description" id="description" value="<%=description %>"></td>
                            </tr>
                            <tr>
                                <td></td>
